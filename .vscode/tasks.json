{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Maven: Compile (incremental)",
      "type": "shell",
      "command": "./mvnw compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Maven: Clean & Compile",
      "type": "shell",
      "command": "./mvnw clean compile",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Maven: Spring Boot Run",
      "type": "shell",
      "command": "./mvnw spring-boot:run",
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Tomcat started.*$",
          "endsPattern": "^.*Started .* in .* seconds.*$"
        }
      }
    },
    {
      "label": "cleanup-vapp-base-artifacts",
      "type": "shell",
      "command": "find ../bpmid_vapp-base -name DevVApplication.class -delete -print && find ../bpmid_vapp-base/target -name master.xml -delete -print && echo 'Cleanup complete' || echo 'Cleanup completed with warnings'",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
