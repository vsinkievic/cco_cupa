<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20250811-01" author="vsinkievic">
        <addColumn tableName="jhi_user">
            <column name="merchant_ids" type="varchar(512)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251107-01" author="vsinkievic">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="jhi_user"/>
            <not>
                <columnExists tableName="jhi_user" columnName="created_at"/>
            </not>
        </preConditions>
        <renameColumn tableName="jhi_user" oldColumnName="created_date" newColumnName="created_at"/>
        <renameColumn tableName="jhi_user" oldColumnName="created_by" newColumnName="created_by"/>
        <renameColumn tableName="jhi_user" oldColumnName="last_modified_date" newColumnName="updated_at"/>
        <renameColumn tableName="jhi_user" oldColumnName="last_modified_by" newColumnName="updated_by"/>
    </changeSet>

    <changeSet id="20251107-02" author="vsinkievic">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="jhi_user"/>
            <not>
                <columnExists tableName="jhi_user" columnName="version"/>
            </not>
        </preConditions>
        <addColumn tableName="jhi_user">
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
